{
  "compilerOptions": {
    "target": "ES2019",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "lib": ["esnext", "dom"],
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
